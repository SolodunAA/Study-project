<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
        logicalFilePath="db/changelog.xml">
    <changeSet id="004_createTrainingsTable.xml" author="Solodun">
        <createTable tableName="TrainingsTable" schemaName="dairy">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(255)">
                <constraints unique="true" uniqueConstraintName="pair_unique"/>
            </column>
            <column name="date" type="DATE">
                <constraints unique="true" uniqueConstraintName="pair_unique"/>
            </column>
            <column name="trainingType" type="VARCHAR(255)">
                <constraints unique="true" uniqueConstraintName="pair_unique"/>
            </column>
            <column name="time" type="INT"/>
            <column name="calories" type="INT"/>
            <column name="extraInfo" type="VARCHAR(255)"/>
        </createTable>

    </changeSet>

</databaseChangeLog>