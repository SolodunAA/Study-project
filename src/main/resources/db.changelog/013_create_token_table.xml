<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
        logicalFilePath="db/changelog.xml">
    <changeSet id="013_create_token_table.xml" author="Solodun">
        <createSequence sequenceName="token_id_seq" schemaName="admin_data"
                        minValue="1"
                        dataType="BIGINT"/>
        <createTable tableName="token_table" schemaName="admin_data" remarks="token">
            <column name="token_id" type="BIGINT" defaultValueComputed="nextval('admin_data.token_id_seq')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login_id" type="BIGINT" remarks="FK with login table">
                <constraints nullable="false"/>
            </column>
            <column name="token" type="VARCHAR(255)" remarks="token"/>
            <column name="time" type="BIGINT" remarks="timestamp"/>
        </createTable>
    </changeSet>

</databaseChangeLog>