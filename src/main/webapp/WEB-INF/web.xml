<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>diary.app.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllTrainings</servlet-name>
        <servlet-class>diary.app.servlet.GetAllTrainingsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllTrainings</servlet-name>
        <url-pattern>/training/get/all_trainings</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getOneTraining</servlet-name>
        <servlet-class>diary.app.servlet.GetOneTrainingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getOneTraining</servlet-name>
        <url-pattern>/training/get/one_training</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getTrainingsFromThePeriod</servlet-name>
        <servlet-class>diary.app.servlet.GetTrainingsFromThePeriodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getTrainingsFromThePeriod</servlet-name>
        <url-pattern>/training/get/training_from_period</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>saveTraining</servlet-name>
        <servlet-class>diary.app.servlet.SaveTrainingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>saveTraining</servlet-name>
        <url-pattern>/training/save</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>getTrainingsTypes</servlet-name>
        <servlet-class>diary.app.servlet.GetTrainingsTypesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getTrainingsTypes</servlet-name>
        <url-pattern>/training_types/save</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addTrainingsTypes</servlet-name>
        <servlet-class>diary.app.servlet.AddTrainingTypeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addTrainingsTypes</servlet-name>
        <url-pattern>/training_types/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteTrainingType</servlet-name>
        <servlet-class>diary.app.servlet.DeleteTrainingTypeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteTrainingType</servlet-name>
        <url-pattern>/training_types/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteTraining</servlet-name>
        <servlet-class>diary.app.servlet.DeleteTrainingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteTraining</servlet-name>
        <url-pattern>/training/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>diary.app.servlet.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
</web-app>
